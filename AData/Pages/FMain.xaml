<Page x:Class="ANode.Application.Pages.FMainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ANode.Application.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FMainPage">

    <Grid>
        <Grid HorizontalAlignment="Center" Height="430" VerticalAlignment="Center" Width="780">
            <StackPanel Orientation="Vertical" Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid x:Name="grid1" Height="80" Width="100">
                    <Image x:Name="cat_saying_welcome" Height="48" Width="48" Source="/Data/Resources/icons/cat_saying_welcome.png" Stretch="Uniform"/>
                </Grid>
                <Grid x:Name="grid2" Height="50" Width="291">
                    <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Добро пожаловать в систему!" VerticalAlignment="Center" Width="Auto" Height="24" FontSize="14" FontWeight="Bold" Foreground="#FF444B54"/>
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
